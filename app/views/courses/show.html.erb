<div class="row">
  <h1 class="label-name"><%= @course.name %></h1>
  <p><%= t "admin.courses.status.#{@course.status}" %></p>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="row">
      <h2 class="label-name">
        <%= t "client.courses.description" %>
      </h2>
      <p><%= @course.description %></p>
    </div>
    <div class="row">
      <h2 class="label-name">
        <%= t "client.courses.subject_info" %>
      </h2>
      <ul>
        <% @course.subjects.each do |subject| %>
          <h3><%= link_to subject.name, subject %></h3>
          <p><%= subject.description %></p>
        <% end %>
      </ul>
    </div>
    <div class="row">
      <h2 class="label-name">
        <%= t "client.courses.trainee_info" %>
      </h2>
      <ul class="list-trainees">
        <% @course.trainees.each do |trainee| %>
          <li class="user_info">
            <%= gravatar_for trainee %>
            <div class="name-email">
              <%= link_to trainee.name, trainee %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="row">
      <h2 class="label-name">
        <%= t "client.courses.manager" %>
      </h2>
      <ul class="list-managers">
        <% @course.supervisors.each do |supervisor| %>
          <li class="user_info">
            <%= gravatar_for supervisor %>
            <div class="name-email">
              <%= link_to supervisor.name, supervisor %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-4">
    <div class="row">
      <h2 class="label-name">
        <%= t "client.courses.activity" %>
      </h2>
    </div>
  </div>
</div>
