<%= provide :title, t("courses.all_courses") %>
<h1><%= t "courses.all_courses" %></h1>
<% @courses.each do |course| %>
  <% user_course course.id %>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <div class="course_list_border">
        <h3><%= link_to course.name, course %></h3>
        <p><%= course.description.truncate(
          Settings.course.number_of_description) %></p>
        <span class="glyphicon glyphicon-user"> <%= course.trainees.count %>
          <%= t :trainees %>
          <%= render "shared/status_label", label: course.status %>
          <label class="label label-<%= @user_course ? "success" : "default" %>">
            <%= @user_course ? t("client.users.joined") : t("client.users.not_joined") %>
          </label>
        </span>
      </div>
    </div>
    <div class="col-md-offset-1">
      <%= link_to t("courses.view_course"), course, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
