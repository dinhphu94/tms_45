<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:system_name), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t(:manager_user), admin_users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t :manager_course %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("admin.courses.title"), new_admin_course_path %></li>
                <li><%= link_to t("admin.courses.all_courses"), admin_courses_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t :manager_subject %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("admin.subjects.new"), new_admin_subject_path %></li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t :manager_course %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("client.courses.name"), courses_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), current_user.admin? ?
                [:admin, current_user] : current_user %></li>
              <li><%= link_to t(:edit_user), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:login), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
